class Proj001 {
	public static String make_hello (int n){
		// return the String
		return "Hello, World - from a function (" + (n + 3) + ")";
	}

	// what is going on with print and println?
	// if you put '\n' in a string - what happens?
	public static void main (String[] args){
		System.out.print("Hello, World");
		System.out.print("And more stuff...");
		System.out.println();
		System.out.println(make_hello(7));
	}
}
